@model Lanche

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="img-thumbnail">
        <img class="rounded" src="@Model.ImagemUrl" alt="" />
    </div>
    <div class="figure-caption">
        <h3 class="justify-content-end">Preço: @Model.Preco.ToString("c")</h3>
        <h3>@Model.Nome</h3>
        <p>@Model.DescricaoCurta</p>
    </div>
</div>
